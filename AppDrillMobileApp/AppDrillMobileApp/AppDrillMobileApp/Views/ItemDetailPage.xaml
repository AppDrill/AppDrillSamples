<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDrillMobileApp.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Server Address:" FontSize="Medium" />
        <Label Text="{Binding ServerAddress}" FontSize="Small"/>
        <Label Text="Model Name:" FontSize="Medium" />
        <Label Text="{Binding ModelName}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>