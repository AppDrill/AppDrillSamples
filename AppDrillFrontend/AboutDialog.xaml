<Window x:Class="AppDrillFrontend.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDrillFrontend"
        mc:Ignorable="d"
        Title="About" Height="300" Width="400"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel>
            <Image Source="AppDrill_Small.png" Stretch="None" Margin="5"></Image>
            <TextBlock Name="titleTextBlock" HorizontalAlignment="Center" Margin="10" FontSize="20">AppDrill Troubleshooter</TextBlock>
            <TextBlock HorizontalAlignment="Center" Margin="10" FontSize="16">(C) AppDrill, 2021</TextBlock>
            <Button Margin="10" Width="40" Click="OkButton_Click">OK</Button>
        </StackPanel>
    </Grid>
</Window>
